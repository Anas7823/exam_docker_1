server {
    listen 80;  # Utilise le port 80
    server_name 127.0.0.1;  # Ou ton IP

    root /var/www/html;  # Chemin vers le document root

    index index.php index.html index.htm;  # Index

    location / {
        try_files $uri $uri/ /index.php?$query_string;  # Rediriger vers index.php si non trouv√©
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php7.3-fpm.sock;  # Assure-toi que ce chemin est correct
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}
